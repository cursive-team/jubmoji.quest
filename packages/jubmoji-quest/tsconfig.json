{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "resolveJsonModule": true
  },
  "include": [
    "./next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "./node_modules"
  ]
}
